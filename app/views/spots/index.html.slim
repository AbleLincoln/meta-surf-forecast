- @spots.each do |spot|
  h4.margin-left= raw "#{link_to spot.name, spot} (#{map_link(spot)})"
  =column_chart [\
      { name: 'Spitcast', data: round_heights(format_timestamps(spot.spitcasts.where(timestamp: spot.overlapping_timestamps).for_chart)) },
      { name: 'MSW', data: round_heights(format_timestamps(spot.msws.where(timestamp: spot.overlapping_timestamps).for_chart)) },
      { name: 'Surfline', data: round_heights(format_timestamps(spot.surfline_nearshores.where(timestamp: spot.overlapping_timestamps).for_chart)) },
    ], max: Forecast.forecasted_max.ceil
